{
  "compilerOptions": {
      "target": "es6", // Ensure ES6 target or higher
      "lib": ["es6", "dom"], // Include necessary libraries
      "module": "commonjs", // Output CommonJS modules if using Node.js
      "esModuleInterop": true, // Allow default imports from modules with no default export
      "strict": true, // Enable strict type checking
      "noImplicitAny": true, // Disallow implicit any types
      "strictNullChecks": true, // Enable strict null checks
      "outDir": "./dist", // Output directory for compiled JavaScript
      "sourceMap": true // Generate source maps for debugging
  }
}
